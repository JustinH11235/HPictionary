<html>
  <head>
    <html lang="en">
    <meta charset="utf-8">

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <link href="/static/css/styles.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <title>HPictionary</title>

    <script src="/socket.io/socket.io.js"></script>

  </head>
  <body>
    <div class="container1">

      <br>
      <h2 id="cur-word" style="color: #ea433b;"></h2>
      <br>
      <canvas id="canvas" style="border: 1px solid #ea433b"></canvas>
      <br>
      <input type="color" id="cur-color" value="#ea433b">
      <input type="range" id="cur-width" min="1" max="100" value="5">
      <br>
      <svg id="color-history" width="142" height="25">
        <rect id="color0" x="1" y="2.5" width="20" height="20" style="fill:#FFFFFF;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color1" x="31" y="2.5" width="20" height="20" style="fill:#FFFFFF;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color2" x="61" y="2.5" width="20" height="20" style="fill:#FFFFFF;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color3" x="91" y="2.5" width="20" height="20" style="fill:#FFFFFF;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color4" x="121" y="2.5" width="20" height="20" style="fill:#FFFFFF;stroke-width:1;stroke:rgb(0,0,0)"/>
      </svg>

      <br><br>
      <p style="color: #ea433b;"><b><u>Username: <%= username %></u></b></p>
      <h2 style="color: #ea433b;"><b>Scoreboard</b></h2>
      <ul id="scoreboard" class="list-group list-group-flush">
      </ul>

    </div>

    <script>
      const USERNAME = '<%= username %>';
      const CANVAS_WIDTH = <%= width %>;
      const CANVAS_HEIGHT = <%= height %>;
    </script>

    <script type="text/javascript" src="/static/js/game.js"></script>

  </body>
</html>