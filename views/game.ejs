<html>
  <head>
    <html lang="en">
    <meta charset="utf-8">

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">

    <link href="/static/css/styles.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <link rel="shortcut icon" href="/static/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/static/favicon.ico" type="image/x-icon">
    
    <title>HPictionary</title>

    <script src="/socket.io/socket.io.js"></script>

  </head>
  <body>
    <div class="container1">

      <br>
      <h2 id="cur-word" style="color: #ea433b;">&nbsp</h2>
      <br>
      <h4 id="clock" style="color: #ea433b;">&nbsp</h4>
      <br>
      <canvas id="canvas" style="border: 1px solid #ea433b"></canvas>
      <br>
      <input type="color" id="cur-color" value="#000000">
      <input type="range" id="cur-width" min="1" max="100" value="5">
      <br>

      <!--Added eraser-->
      <svg id="erase-canvas" width="35" height="25">
        <rect id="eraser" x="0.5" y="2.5" width="24" height="20" style="fill:#FFFFFF;stroke-width:1;stroke:rgb(0,0,0)" />
        <polygon points="1.0,3.0 24.0,22.0" style="stroke:rgb(255, 0, 0)"/>
      </svg>
      <!-- / -->

      <svg id="color-history" width="142" height="25">
        <rect id="color0" x="1" y="2.5" width="20" height="20" style="fill:#000000;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color1" x="31" y="2.5" width="20" height="20" style="fill:#652F06;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color2" x="61" y="2.5" width="20" height="20" style="fill:#FF0000;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color3" x="91" y="2.5" width="20" height="20" style="fill:#00FF00;stroke-width:1;stroke:rgb(0,0,0)"/>
        <rect id="color4" x="121" y="2.5" width="20" height="20" style="fill:#0000FF;stroke-width:1;stroke:rgb(0,0,0)"/>
      </svg>

      <!-- Added Flood Fill button -->
      <span id="flood-fill-bucket" class="buttons">Flood Fill</span>  <!-- replace with a bucket fill icon -->
      
      <span id="clear-canvas" class="buttons">Clear Canvas</span>
      <br>

      <br><br>
      <p style="color: #ea433b;"><b><u>Username: <%= username %></u></b></p>

      <h4 style="color: #ea433b;"><b>Scoreboard</b></h4>
      <ul id="scoreboard" class="list-group list-group-flush">
      </ul>

      <div class="container-chat">
        <h4 style="color: #ea433b;"><b>Chat</b></h4>
        <ul id="chat">
        </ul>

        <form onsubmit="return chatSend()">
          <p>
              <input type="text" id="chat-box" placeholder="Your guess" autocomplete="off"/>
          </p>
          <p>
              <button type="submit" class="btn btn-primary">Guess</button>
          </p>
        </form>
      </div>

    </div>

    <script>
      const USERNAME = '<%= username %>';
      const CANVAS_WIDTH = <%= width %>;
      const CANVAS_HEIGHT = <%= height %>;
      const TURN_TIME = <%= turnTime %>;
    </script>

    <script type="text/javascript" src="/static/js/game.js"></script>

  </body>
</html>

